extends layout

block content
    #gameInterface.fluidContainer
        ul#displays.list-inline
            li
                h2#locationDisplay.text-info
            li
                h2#xpDisplay.text-success
            li
                h2#LevelDisplay.text-danger
        #storyWell.well.well-lg
        p INPUT
            input#userInput.well-sm(type='text')
        ul#inputs.list-inline.pull-right
            li
                #saveBtn.btn.btn-success.btn-lg.pull-right SAVE
            li
                #loadBtn.btn.btn-warning.btn-lg.pull-right LOAD